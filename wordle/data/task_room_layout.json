{
    "title": "Wordle Task Room",
    "html": [
        {
            "layout-type": "div",
            "id": "typing",
            "style": "margin: 5px 10px; min-height: 20px"
        },
        {
            "layout-type": "div",
            "class": "card",
            "layout-content": [
                {
                    "layout-type": "div",
                    "layout-content": [
                        {
                            "layout-type": "b",
                            "layout-content": [
                                {
                                    "layout-type": "lighter",
                                    "id": "instr_title",
                                    "style": "min-height: 20px"
                                }
                            ]
                        }
                    ],
                    "style": "color: #abb2b9;"
                },
                {
                    "layout-type": "hr",
                    "layout-content": "",
                    "style": "margin: 2px; background-color: #abb2b9; opacity: .50;"
                },
                {
                    "layout-type": "div",
                    "id": "instr",
                    "style": "white-space: pre-wrap;"
                },
                {
                    "layout-type": "div",
                    "id": "wrapper",
                    "layout-content": [
                        {
                            "layout-type": "div",
                            "id": "game-board"
                        },
                        {
                            "layout-type": "div",
                            "id": "keyboard-cont",
                            "layout-content": [
                                {
                                    "layout-type": "div",
                                    "class": "first-row",
                                    "layout-content": [
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "q"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "w"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "e"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "r"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "t"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "y"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "u"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "i"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "o"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "p"
                                        }
                                    ]
                                },
                                {
                                    "layout-type": "div",
                                    "class": "second-row",
                                    "layout-content": [
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "a"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "s"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "d"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "f"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "g"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "h"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "j"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "k"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "l"
                                        }
                                    ]
                                },
                                {
                                    "layout-type": "div",
                                    "class": "third-row",
                                    "layout-content": [
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "DEL"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "z"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "x"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "c"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "v"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "b"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "n"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "m"
                                        },
                                        {
                                            "layout-type": "button",
                                            "class": "keyboard-button",
                                            "layout-content": "ENTER"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "layout-type": "div",
                    "id": "image-area",
                    "layout-content": [
                        {
                            "layout-type": "image",
                            "id": "current-image",
                            "style": "min-width: 70vmin; max-width: 100%; height: auto; object-fit: contain; padding: 2%;"
                        }
                    ]
                }
            ]
        }
    ],
    "css": {
            ".card": {
                "position": "relative",
                "display": "flex",
                "flex-direction": "column",
                "min-width": "0",
                "background-color": "#fff",
                "background-clip": "border-box",
                "border": "1px solid rgba(0,0,0,.125)",
                "border-radius": ".25rem",
                "height": "100vh!important",
                "margin": "0px 15px",
                "padding": "20px"
            },
            "time:before": {
                "content": "''"
            },
            "#image-area": {
                "margin": "0 auto",
                "align-items":"center",
                "justify-content": "center"
            },
            "#game-board": {
                "display": "flex",
                "align-items": "center",
                "flex-direction": "column"
            },
            "#wrapper": {
                "display": "flex",
                "align-items":"center",
                "justify-content": "center"
            },
            ".letter-box": {
                "border": "2px solid gray",
                "border-radius": "3px",
                "margin": "2px",
                "font-size": "2.5rem",
                "font-weight": "700",
                "height": "2rem",
                "width": "2rem",
                "display": "flex",
                "justify-content": "center",
                "align-items": "center",
                "text-transform": "uppercase"
            },
            ".filled-box": {
                "border": "2px solid black"
            },
            ".letter-row": {
            "display": "flex"
            },
            "#keyboard-cont": {
            "margin": "1rem 0",
            "display": "flex",
            "flex-direction": "column",
            "align-items": "center",
            "justify-content":"center"
            },
            "#keyboard-cont div": {
            "display": "flex"
            },              
            ".second-row": {
            "margin": "0.5rem 0"
            },
            ".keyboard-button":{
            "font-size": "1rem",
            "font-weight": "700",
            "padding": "0.5rem",
            "margin": "0 2px",
            "cursor": "pointer",
            "text-transform": "uppercase"
            },
            "#instr": {
            "text-align": "center"
            }
    },
    "scripts": {
        "incoming-text": "markdown",
        "incoming-image": "display-image",
        "submit-message": "send-message",
        "print-history": ["attribute-history", "markdown-history"],
        "typing-users": "typing-users",
        "plain": "wordle"
    }
}
