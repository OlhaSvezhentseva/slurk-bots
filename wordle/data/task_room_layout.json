    },
    {
      "layout-type": "div",
      "class": "card",
      "layout-content": [
        {
          "layout-type": "div",
          "style": "white-space: pre-wrap; margin:10px"
        },
        {
          "layout-type": "div",
          "id": "image-area",
          "layout-content": [
            {
              "layout-type": "image",
              "id": "current-image",
              "style": "width: 100%; height: auto; object-fit: contain;"
            }
          ]
        }
      ]
    }
  ],
  "css": {
    ".card": {
      "position": "relative",
      "display": "flex",
      "flex-direction": "column",
      "min-width": "0",
      "background-color": "#fff",
      "background-clip": "border-box",
      "border": "1px solid rgba(0,0,0,.125)",
      "border-radius": ".25rem",
      "height": "100%",
      "margin": "0px 15px",
      "padding": "20px"
    },
    ".hr": {
      "margin": "10px",
      "background-color": "#abb2b9",
      "opacity": ".50"
    },
    "time:before": {
      "content": "''"
    },
    "#image-area": {
      "margin": "0 auto",
      "align-items": "center",
      "justify-content": "center"
    },
    "#game-board": {
      "display": "flex",
      "align-items": "center",
      "flex-direction": "column"
    },
    "#wrapper": {
      "display": "flex",
      "align-items": "center",
      "justify-content": "center",
      "flex-direction": "column",
      "column-gap": "2rem"
    },
    "#game": {
      "display": "flex",
      "flex-direction": "row",
      "column-gap": "2rem"
    },
    "#colorsexplained": {
      "display": "flex",
      "flex-direction": "column",
      "column-gap": "2rem"
    },
    ".letter-box": {
      "padding-top": "0.5rem",
      "border": "2px solid gray",
      "border-radius": "3px",
      "margin": "2px",
      "font-size": "2.5rem",
      "font-weight": "700",
      "height": "2rem",
      "width": "2rem",
      "display": "flex",
      "justify-content": "center",
      "align-items": "center",
      "text-transform": "uppercase"
    },
    ".filled-box": {
      "border": "2px solid black"
    },
    ".letter-row": {
      "display": "flex"
    },
    "#keyboard-cont": {
      "margin": "1rem 0",
      "display": "flex",
      "flex-direction": "column",
      "align-items": "center",
      "justify-content": "center"
    },
    "#keyboard-cont div": {
      "display": "flex"
    },
    ".second-row": {
      "margin": "0.5rem 0"
    },
    ".keyboard-button": {
      "font-size": "1rem",
      "font-weight": "700",
      "padding": "0.5rem",
      "margin": "0 2px",
      "cursor": "pointer",
      "text-transform": "uppercase"
    },
    "#instr": {
      "text-align": "justify",
      "text-justify": "inter-word",
      "margin": "10px"
    }
  },
  "scripts": {
    "incoming-text": "markdown",
    "incoming-image": "display-image",
    "submit-message": "send-message",
    "print-history": [
      "attribute-history",
      "markdown-history"
    ],
    "typing-users": "typing-users",
    "plain": "wordle"
  }
}
