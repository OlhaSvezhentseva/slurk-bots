{
    "title": "Click Task Room",
    "html": [
        {
            "layout-type": "div",
            "style": "margin: 5px 10px; min-height: 20px"
        },
        {
            "layout-type": "div",
            "style": "text-align: center; margin: 10px;",
            "layout-content": [{
                    "layout-type": "button",
                    "layout-content": "Start!",
                    "id": "start-button",
                    "onclick": "submit_command(\"start\");"
                },
                {
                    "layout-type": "audio",
                    "id": "audio-file",
                    "controls src": "",
                    "class": "dis-button",
                    "autoplay": "true"

                },
                {
                    "layout-type": "button",
                    "layout-content": "Next>",
                    "id": "next-button",
                    "onclick": "submit_command(\"next\");",
                    "class": "dis-button"
                }
            ]
        },
        {
            "layout-type": "div",
            "style": "text-align: center;",
            "layout-content": [
                {
                    "layout-type": "image",
                    "id": "tracking-area"
                }
            ]
        }
    ],
    "css": {
        ".dis-button": {
            "display": "none;"
        },
        "button": {
            "vertical-align": "top;",
            "height": "30px;",
            "margin": "0% 5%;"
        }
    },
    "scripts": {
        "incoming-text": "markdown",
        "incoming-image": "display-image",
        "submit-message": "send-message",
        "print-history": "markdown-history",
        "plain": "mouse-tracking"
    }
}
