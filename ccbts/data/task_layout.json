{
    "title": "Room",
    "html": [
        {
            "layout-type": "div",
            "class": "card",
            "layout-content":[
                {
                    "layout-type": "div",
                    "layout-content": [
                        {
                            "layout-type": "b",
                            "layout-content": [
                                {
                                    "layout-type": "lighter",
                                    "id": "instr_title",
                                    "style": "min-height: 20px; text-align: center"
                                }
                            ]
                        }
                    ],
                    "style": "color: #abb2b9;"
                },
                {
                    "layout-type": "hr",
                    "layout-content": "",
                    "style": "margin: 2px; background-color: #abb2b9; opacity: .50;"
                },
                {
                    "layout-type": "div",
                    "id": "instr"
                },
                {
                    "layout-type": "div",
                    "style": "text-align: center; display: grid",
                    "id": "intro-image",
                    "layout-content": [
                        {
                            "layout-type": "div",
                            "id": "image-area",
                            "layout-content": [
                                {
                                    "layout-type": "image",
                                    "src": "https://media.giphy.com/media/tXL4FHPSnVJ0A/giphy.gif",
                                    "style": "width: 100%; height: auto; object-fit: contain;"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "layout-type": "div",
            "class": "hidden_card",
            "id": "source_card",
            "layout-content":[
                {
                    "layout-type": "center",
                    "id": "source-grid"
                }
            ]
        },
        {
            "layout-type": "div",
            "class": "hidden_card",
            "id": "target_card",
            "layout-content":[
                {
                    "layout-type": "div",
                    "style": "display: flex",
                    "layout-content" :[
                        {
                            "layout-type": "div",
                            "style": "width: 100%;",
                            "id": "target-grid"
                        },
                        {
                            "layout-type": "div",
                            "style": "width: 100%; display: none",
                            "id": "reference-grid"
                        }
                    ]
                }
            ]
        },
        {
            "layout-type": "div",
            "class": "card",
            "layout-content": [
                {
                    "layout-type": "hr",
                    "layout-content": "",
                    "style": "margin: 10px 2px; background-color: #abb2b9; opacity: .50;"
                }
            ]
        }
    ],
    "css": {
        "table": {
            "letter-spacing": "0.5rem",
            "font-size": "0.8rem",
            "border": "0.2rem solid #CECDCD"
        },
        "td, th": {
            "padding": "0.6rem 1rem",
            "border": "0.2rem solid #CECDCD"
        },
        "td": {
          "text-align": "center",
          "font-size": "1.3rem",
          "font-weight": "900",
          "border": "0.2rem solid white"  
        },
        ".card, .hidden_card": {
            "position": "relative",
            "display": "flex",
            "flex-direction": "column",
            "min-width": "0",
            "background-color": "#fff",
            "background-clip": "border-box",
            "border": "1px solid rgba(0,0,0,.125)",
            "border-radius": ".25rem",
            "height": "100%",
            "margin": "0px 15px",
            "padding": "20px"
        },
        "time:before": {
            "content": "''"
        },
        "#image-area": {
            "margin": "0 auto",
            "align-items":"center",
            "justify-content": "center"
        },            
        ".hidden_card": {
            "display": "none"
        }
    },
    "scripts": {
            "incoming-text": "markdown",
            "incoming-image": "display-image",
            "submit-message": "send-message",
            "print-history": "plain-history",
            "typing-users": "typing-users",
            "plain": "ccbts"
        },
        "show_latency": false
    }