    "css": {
        ".viewport": {
            "position": "relative;",
            "height": "300px",
            "width": "300px"
        },
        ".viewport canvas": {
            "position": "absolute;"
        },
        "canvas": {
            "background-color": "transparent;",
            "border": "1px solid #000000;"
        },
        "table": {
            "letter-spacing": "0.5rem",
            "font-size": "0.8rem",
            "border": "0.2rem solid #CECDCD"
        },
        "td, th": {
            "padding": "0.1rem 1rem",
            "border": "0.2rem solid #CECDCD"
        },
        "td": {
          "text-align": "center",
          "font-size": "1.3rem",
          "font-weight": "900",
          "border": "0.2rem solid white"  
        },
        ".card, .hidden_card": {
            "position": "relative",
            "display": "flex",
            "flex-direction": "column",
            "min-width": "0",
            "background-color": "#fff",
            "background-clip": "border-box",
            "border": "1px solid rgba(0,0,0,.125)",
            "border-radius": ".25rem",
            "height": "100%",
            "margin": "0px 15px",
            "padding": "20px"
        },
        "time:before": {
            "content": "''"
        },
        "#image-area": {
            "margin": "0 auto",
            "align-items":"center",
            "justify-content": "center"
        },            
        ".hidden_card": {
            "display": "none"
        },
        ".text_cont": {
            "border": "1px solid #CECDCD",
            "border-radius": "10px",
            "padding": "5px",
            "width": "50%",
            "margin": "5px"
        },
        ".editor": {
            "border": "1px solid #CECDCD",
            "border-radius": "10px",
            "padding": "10px",
            "height": "50%",
            "display": "flex"
        },
        ".button": {
            "text-transform": "uppercase",
            "font-size": "medium",
            "border-radius": "5px",
            "border": "none",
            "box-shadow": "rgba(0,0,0,0.14902) 0 1px 1px 0,rgba(0,0,0,0.09804) 0 1px 2px 0",
            "outline": 0,
            "background": "#00305E",
            "width": "100%",
            "color": "#FFFFFF",
            "padding": "15px",
            "cursor": "pointer"
        },
        ".button:hover" : {
            "content": "''",
            "background": "#818BAC"
        }
    },
    "scripts": {
            "incoming-text": "markdown",
            "incoming-image": "display-image",
            "submit-message": "send-message",
            "print-history": "markdown-history",
            "typing-users": "typing-users",
            "plain": [
                "ccbts",
                "golmi-js/view/View",
                "golmi-js/view/COCOLayerView"
            ]
                
        },
        "show_latency": false
    }