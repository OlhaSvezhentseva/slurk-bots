{
    "title": "CoCoBots",
    "subtitle": "Work together and recreate the target board",
    "html": [
        {
            "layout-type": "div",
            "class": "card",
            "layout-content":[
                {
                    "layout-type": "div",
                    "layout-content": [
                        {
                            "layout-type": "b",
                            "layout-content": [
                                {
                                    "layout-type": "lighter",
                                    "id": "instr_title",
                                    "style": "min-height: 20px; text-align: center"
                                }
                            ]
                        }
                    ],
                    "style": "color: #abb2b9;"
                },
                {
                    "layout-type": "hr",
                    "layout-content": "",
                    "style": "margin: 2px; background-color: #abb2b9; opacity: .50;"
                },
                {
                    "layout-type": "div",
                    "id": "instr"
                },
                {
                    "layout-type": "div",
                    "style": "text-align: center; display: grid",
                    "id": "intro-image",
                    "layout-content": [
                        {
                            "layout-type": "div",
                            "id": "image-area",
                            "layout-content": [
                                {
                                    "layout-type": "image",
                                    "src": "https://media.giphy.com/media/tXL4FHPSnVJ0A/giphy.gif",
                                    "style": "width: 100%; height: auto; object-fit: contain;"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "layout-type": "div",
            "class": "hidden_card",
            "id": "source_card",
            "layout-content":[
                {
                    "layout-type": "div",
                    "id": "source-grid"
                }
            ]
        },
        {
            "layout-type": "div",
            "class": "hidden_card",
            "id": "target_card",
            "layout-content":[
                {
                    "layout-type": "div",
                    "style": "display: flex",
                    "layout-content" :[
                        {
                            "layout-type": "div",
                            "style": "width: 100%; display: none",
                            "id": "reference-grid"
                        },
                        {
                            "layout-type": "div",
                            "style": "width: 100%;",
                            "id": "target-grid"
                        },
                        {
                            "layout-type": "div",
                            "style": "width: 100%",
                            "id": "terminal_card",
                            "layout-content": [
                                {
                                    "layout-type": "div",
                                    "layout-content": "TERMINAL",
                                    "style": "text-align: center; font-weight: bold"
                                },
                                {
                                    "layout-type": "hr",
                                    "layout-content": "",
                                    "style": "margin: 10px 2px; background-color: #abb2b9;"
                                },
                                {
                                    "layout-type": "center",
                                    "style": "height: 100%",
                                    "layout-content": [
                                        {
                                            "layout-type": "div",
                                            "style": "height: 60%",
                                            "class": "editor",
                                            "layout-content": [
                                                {
                                                    "layout-type": "div",
                                                    "class": "text_cont",
                                                    "layout-content": [
                                                        {
                                                            "layout-type": "div",
                                                            "style": "height: 10%; padding-bottom: 10px; text-align: center",
                                                            "layout-content": "COMMAND HISTORY"
                                                        }, 
                                                        {
                                                            "layout-type": "hr",
                                                            "layout-content": "",
                                                            "style": "margin: 10px 2px; background-color: #abb2b9;"
                                                        },
                                                        {
                                                            "layout-type": "div",
                                                            "id": "history",
                                                            "style": "width: 100%; height: 90%; overflow-y:scroll; text-align: left"
                                                        }
                                                    ]
                                                },
                                                {
                                                    "layout-type": "div",
                                                    "class": "text_cont",
                                                    "layout-content": [
                                                        {
                                                            "layout-type": "div",
                                                            "style": "height: 10%; padding-bottom: 10px; text-align: center",
                                                            "layout-content": "COMMAND EDITOR"
                                                        },   
                                                        {
                                                            "layout-type": "hr",
                                                            "layout-content": "",
                                                            "style": "margin: 10px 2px; background-color: #abb2b9;"
                                                        },
                                                        {
                                                            "layout-type": "textarea",
                                                            "id": "input",
                                                            "style": "width: 100%; height: 75%; border: 0px; resize:none"
                                                        }
                                                    ]
                                                }
                                            ]
                                        },
                                        {
                                            "layout-type": "div",
                                            "style": "height: 40%",
                                            "layout-content": [
                                                {
                                                    "layout-type": "hr",
                                                    "layout-content": "",
                                                    "style": "margin: 10px 2px; background-color: #abb2b9"
                                                },
                                                {
                                                    "layout-type": "button",
                                                    "class": "button",
                                                    "role": "button",
                                                    "layout-content": "Clear Target Board",
                                                    "id": "clear_button"
                                                },
                                                {
                                                    "layout-type": "button",
                                                    "class": "button",
                                                    "role": "button",
                                                    "layout-content": "Revert",
                                                    "id": "revert_button"
                                                },
                                                {
                                                    "layout-type": "button",
                                                    "class": "button",
                                                    "role": "button",
                                                    "layout-content": "Run",
                                                    "id": "run_button"
                                                }
                                            ]
                                        }
                                    ]
                                }        
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "layout-type": "div",
            "class": "card",
            "layout-content": [
                {
                    "layout-type": "hr",
                    "layout-content": "",
                    "style": "margin: 10px 2px; background-color: #abb2b9; opacity: .50;"
                }
            ]
        }
    ],
    "css": {
        "table": {
            "letter-spacing": "0.5rem",
            "font-size": "0.8rem",
            "border": "0.2rem solid #CECDCD"
        },
        "td, th": {
            "padding": "0.1rem 1rem",
            "border": "0.2rem solid #CECDCD"
        },
        "td": {
          "text-align": "center",
          "font-size": "1.3rem",
          "font-weight": "900",
          "border": "0.2rem solid white"  
        },
        ".card, .hidden_card": {
            "position": "relative",
            "display": "flex",
            "flex-direction": "column",
            "min-width": "0",
            "background-color": "#fff",
            "background-clip": "border-box",
            "border": "1px solid rgba(0,0,0,.125)",
            "border-radius": ".25rem",
            "height": "100%",
            "margin": "0px 15px",
            "padding": "20px"
        },
        "time:before": {
            "content": "''"
        },
        "#image-area": {
            "margin": "0 auto",
            "align-items":"center",
            "justify-content": "center"
        },            
        ".hidden_card": {
            "display": "none"
        },
        ".text_cont": {
            "border": "1px solid #CECDCD",
            "border-radius": "10px",
            "padding": "5px",
            "width": "50%",
            "margin": "5px"
        },
        ".editor": {
            "border": "1px solid #CECDCD",
            "border-radius": "10px",
            "padding": "10px",
            "height": "50%",
            "display": "flex"
        },
        ".button": {
            "text-transform": "uppercase",
            "font-size": "medium",
            "border-radius": "5px",
            "border": "none",
            "box-shadow": "rgba(0,0,0,0.14902) 0 1px 1px 0,rgba(0,0,0,0.09804) 0 1px 2px 0",
            "margin-top": "10px",
            "outline": 0,
            "background": "#00305E",
            "width": "100%",
            "color": "#FFFFFF",
            "padding": "15px",
            "cursor": "pointer"
        },
        ".button:hover" : {
            "content": "''",
            "background": "#818BAC"
        }
    },
    "scripts": {
            "incoming-text": "markdown",
            "incoming-image": "display-image",
            "submit-message": "send-message",
            "print-history": "markdown-history",
            "typing-users": "typing-users",
            "plain": "ccbts"
        },
        "show_latency": false
    }