{
    "title": "Room",
    "html": [
        {
            "layout-type": "div",
            "class": "card",
            "layout-content":[
                {
                    "layout-type": "div",
                    "layout-content": [
                        {
                            "layout-type": "b",
                            "layout-content": [
                                {
                                    "layout-type": "lighter",
                                    "id": "instr_title",
                                    "style": "min-height: 20px; text-align: center"
                                }
                            ]
                        }
                    ],
                    "style": "color: #abb2b9;"
                },
                {
                    "layout-type": "hr",
                    "layout-content": "",
                    "style": "margin: 2px; background-color: #abb2b9; opacity: .50;"
                },
                {
                    "layout-type": "div",
                    "id": "instr"
                },
                {
                    "layout-type": "div",
                    "style": "text-align: center; display: grid",
                    "id": "buttons",
                    "layout-content": [
                        {
                            "layout-type": "button",
                            "class": "button",
                            "role": "button",
                            "layout-content": "Wizard",
                            "id": "wizard_button"
                        }, 
                        {
                            "layout-type": "button",
                            "class": "button",
                            "role": "button",
                            "layout-content": "Player",
                            "id": "player_button"
                        }
                    ]
                }
            ]
        },
        {
            "layout-type": "div",
            "class": "hidden_card",
            "id": "source_card",
            "layout-content":[
                {
                    "layout-type": "div",
                    "layout-content": "SOURCE BOARD",
                    "style": "text-align: center; font-weight: bold"
                },
                {
                    "layout-type": "hr",
                    "layout-content": "",
                    "style": "margin: 10px 2px; background-color: #abb2b9; opacity: .50;"
                },
                {
                    "layout-type": "div",
                    "id": "source-grid"
                }
            ]
        },
        {
            "layout-type": "div",
            "class": "hidden_card",
            "id": "target_card",
            "layout-content":[
                {
                    "layout-type": "div",
                    "layout-content": "TARGET BOARD",
                    "style": "text-align: center; font-weight: bold"
                },
                {
                    "layout-type": "hr",
                    "layout-content": "",
                    "style": "margin: 10px 2px; background-color: #abb2b9; opacity: .50;"
                },
                {
                    "layout-type": "div",
                    "id": "target-grid"
                }
            ]
        },
        {
            "layout-type": "div",
            "class": "hidden_card",
            "id": "image_card",
            "layout-content":[
                {
                    "layout-type": "div",
                    "id": "image-area",
                    "layout-content": [
                        {
                            "layout-type": "image",
                            "id": "current-image",
                            "style": "min-width: 70vmin; max-width: 100%; height: auto; object-fit: contain; padding: 2%;"
                        }
                    ]
                }
            ]
        }
    ],
    "css": {
        ".grid-container": {
            "display": "float",
            "grid-template-columns": "auto auto auto",
            "padding": "10px",
            "grid-auto-flow": "column"
        },
        ".grid-item": {
            "background-color": "red",
            "border": "1px solid rgba(0, 0, 0, 0.8)",
            "padding": "1px",
            "font-size": "20px",
            "text-align": "center",
            "width": "100%"
        },
        ".grid-row": {
            "width": "100%",
            "display": "flex",
            "grid-template-columns": "auto auto auto",
            "grid-template-rows": "50px 100px"
        },
        ".card, .hidden_card": {
            "position": "relative",
            "display": "flex",
            "flex-direction": "column",
            "min-width": "0",
            "background-color": "#fff",
            "background-clip": "border-box",
            "border": "1px solid rgba(0,0,0,.125)",
            "border-radius": ".25rem",
            "height": "100%",
            "margin": "0px 15px",
            "padding": "20px"
        },
        "time:before": {
            "content": "''"
        },
        "#image-area": {
            "margin": "0 auto",
            "align-items":"center",
            "justify-content": "center"
        },            
        ".hidden_card": {
            "display": "none"
        }
        ,
        ".button": {
            "background-color": "#EA4C89",
            "border-radius": "8px",
            "border-style": "none",
            "box-sizing": "border-box",
            "color": "#FFFFFF",
            "cursor": "pointer",
            "display": "inline-block",
            "font-size": "14px",
            "font-weight": "500",
            "height": "40px",
            "line-height": "20px",
            "list-style": "none",
            "margin": "10px",
            "outline": "none",
            "padding": "10px 16px",
            "position": "relative",
            "text-align": "center",
            "text-decoration": "none",
            "transition": "color 100ms",
            "vertical-align": "baseline",
            "user-select": "none",
            "-webkit-user-select": "none",
            "touch-action": "manipulation"
        },
        ".button:hover" : {
            "content": "''"
        },
        ".button:focus": {
            "background-color": "#F082AC"
        }
    },
    "scripts": {
            "incoming-text": "display-text",
            "incoming-image": "display-image",
            "submit-message": "send-message",
            "print-history": "plain-history",
            "plain": "ccbt"
        },
        "show_latency": false
    }