    "css": {
        ".grid-container": {
            "display": "float",
            "height": "100%"
        },
        ".grid-item, .grid-header": {
            "border-bottom": "1px solid rgba(0, 0, 0, 0.8)",
            "border-top": "1px solid rgba(0, 0, 0, 0.8)",
            "padding": "1px",
            "font-size": "2rem",
            "text-align": "center",
            "width": "100%",
            "height": "3rem",
            "font-weight": "900"
        },
        ".grid-header": {
            "background-color": "#CECDCD",
            "border": "1px solid rgba(0, 0, 0, 0.8);"
        },
        ".grid-row": {
            "width": "100%",
            "display": "flex"
        },
        ".card, .hidden_card": {
            "position": "relative",
            "display": "flex",
            "flex-direction": "column",
            "min-width": "0",
            "background-color": "#fff",
            "background-clip": "border-box",
            "border": "1px solid rgba(0,0,0,.125)",
            "border-radius": ".25rem",
            "height": "100%",
            "margin": "0px 15px",
            "padding": "20px"
        },
        "time:before": {
            "content": "''"
        },
        "#image-area": {
            "margin": "0 auto",
            "align-items":"center",
            "justify-content": "center"
        },            
        ".hidden_card": {
            "display": "none"
        }
    },
    "scripts": {
            "incoming-text": "display-text",
            "incoming-image": "display-image",
            "submit-message": "send-message",
            "print-history": "plain-history",
            "plain": "ccbts"
        },
        "show_latency": false
    }