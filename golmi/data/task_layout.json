{
    "title": "Pentomino in GOLM",
    "subtitle": "Demo of a Pentomino interface build using the GOLM framework",
    "html": [
        {
            "layout-type": "div",
            "class": "card",
            "layout-content": [
                {
                    "layout-type": "div",
                    "id": "viewport",
                    "style": "height: 600px; width: 600px; padding: 10px; margin: 0px auto",
                    "layout-content": [
                        {
                            "layout-type": "canvas",
                            "id": "background",
                            "width": "600",
                            "height": "600"
                        },
                        {
                            "layout-type": "canvas",
                            "id": "objects",
                            "width": "600",
                            "height": "600"
                        },
                        {
                            "layout-type": "canvas",
                            "id": "gripper",
                            "width": "600",
                            "height": "600"
                        }
                    ]
                }
            ]
        }        
    ],
    "css": {
        "#viewport": {
            "position": "relative;"
        },
        "#viewport canvas": {
            "position": "absolute;"
        },
        "canvas": {
            "background-color": "transparent;",
            "border": "1px solid #000000;"
        },
        ".card": {
            "position": "relative",
            "display": "flex",
            "flex-direction": "column",
            "min-width": "0",
            "background-color": "#fff",
            "background-clip": "border-box",
            "border": "1px solid rgba(0,0,0,.125)",
            "border-radius": ".25rem",
            "height": "100%",
            "margin": "0px 15px",
            "padding": "20px"
        }
    },
    "scripts": {
        "incoming-text": "display-text",
        "incoming-image": "display-image",
        "submit-message": "send-message",
        "print-history": "plain-history",
        "plain": [
            "golmi-js/golmi",
            "golmi-js/view/View",
            "golmi-js/view/GiverLayerView",
            "golmi-js/view/ReceiverLayerView",
            "golmi-js/view/LView",
            "golmi-js/controller/LocalKeyController"
        ]
    }
}
